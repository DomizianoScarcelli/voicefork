generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "darwin-arm64", "linux-musl-arm64-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Restaurant {
    id                 Int     @id @default(autoincrement())
    embeddingName      String
    imageName          String
    name               String
    address            String
    latitude           Float
    longitude          Float
    country            String
    region             String
    province           String
    city               String
    tags               String
    cuisines           String
    specialDiets       String
    priceLevel         String
    meals              String
    avgRating          Float
    vegetarianFriendly Boolean
    veganFriendly      Boolean
    glutenFree         Boolean
    reviewsNumber      Int
}
