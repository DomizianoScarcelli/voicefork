generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id      Int    @id @default(autoincrement())
  name    String
  address String
  city    String
  latitude Float
  longitude Float

  @@unique([name, address])
}

